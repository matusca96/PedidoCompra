<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="br.com.idxtecPedidoCompra.controller.PedidoCompraLista" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:t="sap.ui.table"
	displayBlock="true"
	width="100%"
	height="100%">
	<App id="app">
		<pages>
			<Page title="Title" showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Pedido de compra">
							<t:Table id="tablePedidos"
								rows="{ 
									path: '/PedidoVendas',
									parameters: {
										expand: 'ParceiroNegocioDetails'
									}
								}"
								class="sapUiSizeCondensed"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Auto"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Pedidos"/>
										<ToolbarSpacer/>
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Numero" sortProperty="Numero">
										<Label text="Pedido"/>
										<t:template>
											<Text wrapping="false" text="{Numero}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Emissao" sortProperty="Emissao" defaultFilterOperator="EQ">
										<Label text="Emissão"/>
										<t:template>
											<Text wrapping="false" text="{
												path: 'Emissao',
												type: 'sap.ui.model.type.Date',
												formatOptions:{
													style:'short',
													pattern: 'dd.MM.yyyy'
												}
											}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="ParceiroNegocioDetails/RazaoSocial" 
											  sortProperty="ParceiroNegocioDetails/RazaoSocial">
										<Label text="Razão Social"/>
										<t:template>
											<Text wrapping="false" text="{ParceiroNegocioDetails/RazaoSocial}"/>
										</t:template>
									</t:Column>
									<t:Column >
										<Label text="Parceiro ID"/>
										<t:template>
											<Text wrapping="false" text="{ParceiroNegocioDetails/Id}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onAtualizarLista"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>	
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir Novo" press="onIncluirPedido"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditarPedido"/>
						<Button icon="sap-icon://delete" text="Excluir"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>